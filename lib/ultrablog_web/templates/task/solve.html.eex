<h2>Solve a Task</h2>

<ul>
  <li>
    <strong>Title:</strong>
    <%= @task.title %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @task.description %>
  </li>
</ul>

<%= render "doneform.html", Map.put(assigns, :action, task_path(@conn, :update, @task)) %>

<span><%= link "Back to all tasks", to: task_path(@conn, :index) %></span>
<br>
<span><%= link "Back to main", to: "../../main" %></span>
